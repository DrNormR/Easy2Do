<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Easy2Do.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Easy2Do.Views.MainView"
             x:DataType="vm:MainViewModel">
  <Design.DataContext>
    <vm:MainViewModel />
  </Design.DataContext>

  <Grid RowDefinitions="Auto,*" Margin="20">
    <!-- Toolbar -->
    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="0,0,0,20">
      <Button Content="? Create New Note" 
              Command="{Binding CreateNewNoteCommand}"
              Background="#FF4CAF50"
              Foreground="White"
              Padding="15,10"
              CornerRadius="5"/>
      <Button Content="?? Settings" 
              Command="{Binding OpenSettingsCommand}"
              Background="#FF2196F3"
              Foreground="White"
              Padding="15,10"
              CornerRadius="5"/>
    </StackPanel>

    <!-- Notes List -->
    <Border Grid.Row="1" 
            BorderBrush="#FFCCCCCC" 
            BorderThickness="1" 
            CornerRadius="8"
            Background="White">
      <ScrollViewer>
        <ItemsControl ItemsSource="{Binding Notes}">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <Border Margin="10" 
                      Padding="15" 
                      BorderBrush="#FFDDDDDD" 
                      BorderThickness="1" 
                      CornerRadius="5"
                      Background="#FFF9F9F9">
                <Grid ColumnDefinitions="*,Auto">
                  <!-- Note Info -->
                  <StackPanel Grid.Column="0" Spacing="5">
                    <TextBlock Text="{Binding Title}" 
                               FontSize="18" 
                               FontWeight="Bold"/>
                    <TextBlock FontSize="12" 
                               Foreground="#FF666666">
                      <Run Text="Items: "/>
                      <Run Text="{Binding Items.Count}"/>
                      <Run Text=" • Modified: "/>
                      <Run Text="{Binding ModifiedDate, StringFormat='{}{0:g}'}"/>
                    </TextBlock>
                  </StackPanel>

                  <!-- Action Buttons -->
                  <StackPanel Grid.Column="1" 
                              Orientation="Horizontal" 
                              Spacing="5">
                    <Button Content="?? Open" 
                            Command="{Binding $parent[ItemsControl].((vm:MainViewModel)DataContext).OpenNoteCommand}"
                            CommandParameter="{Binding}"
                            Background="#FF9C27B0"
                            Foreground="White"
                            Padding="10,5"
                            CornerRadius="3"/>
                    <Button Content="?? Duplicate" 
                            Command="{Binding $parent[ItemsControl].((vm:MainViewModel)DataContext).DuplicateNoteCommand}"
                            CommandParameter="{Binding}"
                            Background="#FFFF9800"
                            Foreground="White"
                            Padding="10,5"
                            CornerRadius="3"/>
                    <Button Content="??? Delete" 
                            Command="{Binding $parent[ItemsControl].((vm:MainViewModel)DataContext).DeleteNoteCommand}"
                            CommandParameter="{Binding}"
                            Background="#FFF44336"
                            Foreground="White"
                            Padding="10,5"
                            CornerRadius="3"/>
                  </StackPanel>
                </Grid>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </ScrollViewer>
    </Border>
  </Grid>
</UserControl>
