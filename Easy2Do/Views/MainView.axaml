<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Easy2Do.ViewModels"
             mc:Ignorable="d" d:DesignWidth="380" d:DesignHeight="700"
             x:Class="Easy2Do.Views.MainView"
             x:DataType="vm:MainViewModel">
  <Design.DataContext>
    <vm:MainViewModel />
  </Design.DataContext>

  <Grid RowDefinitions="Auto,*" Margin="12">
    <!-- Toolbar -->
    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
      <Button Content="+ New Note" 
              Command="{Binding CreateNewNoteCommand}"
              Background="#FF4CAF50"
              Foreground="White"
              Padding="12,8"
              CornerRadius="5"/>
      <Button Content="Settings" 
              Command="{Binding OpenSettingsCommand}"
              Background="#FF2196F3"
              Foreground="White"
              Padding="12,8"
              CornerRadius="5"/>
    </StackPanel>

    <!-- Notes List -->
    <Border Grid.Row="1" 
            BorderBrush="#FFCCCCCC" 
            BorderThickness="1" 
            CornerRadius="8"
            Background="White">
      <ScrollViewer>
        <ItemsControl ItemsSource="{Binding Notes}">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <Border Margin="6" 
                      Padding="10" 
                      BorderBrush="#FFDDDDDD" 
                      BorderThickness="1" 
                      CornerRadius="5"
                      Background="#FFF9F9F9">
                <Grid RowDefinitions="Auto,Auto">
                  <!-- Note Info -->
                  <StackPanel Grid.Row="0" Spacing="3">
                    <TextBlock Text="{Binding Title}" 
                               FontSize="16" 
                               FontWeight="Normal"
                               FontFamily="Segoe UI Emoji, Segoe UI Symbol, Segoe UI"
                               TextTrimming="CharacterEllipsis"/>
                    <TextBlock FontSize="11" 
                               Foreground="#FF666666"
                               FontFamily="Segoe UI Emoji, Segoe UI Symbol, Segoe UI">
                      <Run Text="Items: "/>
                      <Run Text="{Binding Items.Count}"/>
                      <Run Text=" &#x2022; Modified: "/>
                      <Run Text="{Binding ModifiedDate, StringFormat='{}{0:g}'}"/>
                    </TextBlock>
                  </StackPanel>

                  <!-- Action Buttons -->
                  <StackPanel Grid.Row="1" 
                              Orientation="Horizontal" 
                              Spacing="5"
                              Margin="0,8,0,0">
                    <Button Content="Open" 
                            Command="{Binding $parent[ItemsControl].((vm:MainViewModel)DataContext).OpenNoteCommand}"
                            CommandParameter="{Binding}"
                            Background="#FF9C27B0"
                            Foreground="White"
                            Padding="10,5"
                            CornerRadius="3"/>
                    <Button Content="Duplicate" 
                            Command="{Binding $parent[ItemsControl].((vm:MainViewModel)DataContext).DuplicateNoteCommand}"
                            CommandParameter="{Binding}"
                            Background="#FFFF9800"
                            Foreground="White"
                            Padding="10,5"
                            CornerRadius="3"/>
                    <Button Content="Delete" 
                            Command="{Binding $parent[ItemsControl].((vm:MainViewModel)DataContext).DeleteNoteCommand}"
                            CommandParameter="{Binding}"
                            Background="#FFF44336"
                            Foreground="White"
                            Padding="10,5"
                            CornerRadius="3"/>
                  </StackPanel>
                </Grid>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </ScrollViewer>
    </Border>
  </Grid>
</UserControl>
