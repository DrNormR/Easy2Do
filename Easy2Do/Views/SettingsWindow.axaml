<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Easy2Do.ViewModels"
        xmlns:views="using:Easy2Do.Views"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400"
        x:Class="Easy2Do.Views.SettingsWindow"
        x:DataType="vm:SettingsViewModel"
        Title="Settings"
        Width="500" Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

  <Design.DataContext>
    <vm:SettingsViewModel />
  </Design.DataContext>

  <Grid Margin="20">
    <StackPanel Spacing="15">
      <TextBlock Text="Settings" 
                 FontSize="24" 
                 FontWeight="Bold"
                 Margin="0,0,0,10"/>

      <Border BorderBrush="#FFCCCCCC" 
              BorderThickness="1" 
              CornerRadius="5"
              Padding="15"
              Background="#FFF9F9F9">
        <StackPanel Spacing="10">
          <Button Content="About Easy2Do" 
                  Command="{Binding ShowAboutCommand}"
                  HorizontalAlignment="Left"
                  Padding="20,10"
                  Background="#FF2196F3"
                  Foreground="White"
                  CornerRadius="5"/>
          
          <TextBlock Text="View information about this application"
                     FontSize="12"
                     Foreground="#FF666666"/>
        </StackPanel>
      </Border>

      <!-- About Section (shown when About is clicked) -->
      <Border IsVisible="{Binding IsAboutVisible}"
              BorderBrush="#FF2196F3" 
              BorderThickness="2" 
              CornerRadius="5"
              Padding="20"
              Background="White">
        <views:AboutView />
      </Border>
    </StackPanel>
  </Grid>
</Window>
